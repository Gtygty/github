<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="Cache-Control" content="no-siteapp" /><!-- 百度禁止转码 -->
    <meta name ="viewport" content ="width=device-width, initial-scale=1, maximum-scale=1, minimum-scale=1, user-scalable=no"> 
    <meta name="format-detection" content="telephone=no,email=no" /> <!-- 禁止自动识别为电话号码和邮件 -->
    <meta name="keywords" content="这里写关键字">
    <meta name="description" content="这里写页面描述">
    <title>关爱商城-商品详情</title>
    <script type="text/javascript" src="../../public/js/jquery.js" ></script>
    <script type="text/javascript" src="../../public/js/swiper/swiper.min.js" ></script>
    <script type="text/javascript" src="js/height.js" ></script>
    <link rel="stylesheet" href="../../public/js/swiper/swiper.min.css" />
    <link rel="stylesheet" href="css/phone.css" />
    <link rel="stylesheet" href="css/theme.css" />
</head>
<body>
    <view class="border-tn bg-default lazyload">
        <div class="container">
            <!-- goods轮播 -->
            <div class="swiper-container goodsbanner">
                <ul class="swiper-wrapper">
                    <li class="swiper-slide">
                        <a href="" title=""><img class="per100" src="img/goodscont.jpg" alt=""></a>
                    </li>  
                </ul>
                <div class="swiper-pagination goods-pagination hide"></div>
            </div>

            <div class="row pt12 pb16 bg-f">
                <h3 class="ellipsis ellipsis2 fs-14 mb8">Delonghi/德龙 EDG606 DOLCEGUSTO雀巢全自动胶囊 咖啡机</h3>
                <p class="fc-9 fs-12 mb12">赠胶囊3盒 +咖啡杯 花式咖啡 轻松做 全国联保</p>
                <div class="">
                    <span class="fs-18 fc-sun">&yen;1999.00</span>
                    <span class="td-lt fs-12 fc-9">&yen;2090.00</span>
                    <span class="ml20 fs-12">244人已购买</span>
                    <div class="btn-infoheart"><i class="icon-like icon-heaart"></i><span>51</span></div>
                </div>
            </div>

            <div class="label-act bg-f mb8">
                <a class="flex-box" href="#" id="btn-address">
                    <div class="label-act-left">
                        <h2 class="fs-12 fc-9">请选择配送地区</h2>
                    </div>
                    <i class="icon-right right"></i>
                </a>
            </div>

            <div class="label-act bg-f mb8">
                <a class="flex-box" href="#" id="chosecolor">
                    <div class="label-act-left">
                        <h2 class="fs-12 fc-9">请选择颜色 、分类、数量</h2>
                    </div>
                    <i class="icon-right right"></i>
                </a>
            </div>

            <div class="row flex-box ht44 bg-f mb0" >
                商品详情
            </div>
            <div class="goods-details-img"><img src="img/goodscont2.jpg" alt=""></div>
        </div>
    </view>
    <footer>
        <div class="flex-box footer">
            <div class="flex1 border-t border-r">
                <div class="flex-box">
                    <a class="flex1" href="#" title="">
                        <i class="icon-home icon-lg"></i>首页
                    </a>
                </div>
            </div>
            <div class="flex1 border-t border-r" id="collection">
                <div class="flex-box">
                    <a class="flex1" href="#" title="">
                        <i class="icon-collection icon-lg"></i><span>收藏</span>
                    </a>
                </div>
            </div>
            <div class="flex1 border-t border-r">
                <div class="flex-box">
                    <a class="flex1" href="#" title="">
                        <i class="icon-cart icon-lg"></i>购物车
                    </a>
                </div>
            </div>
            <div class="border-t border-t-primary" style="width: 55%;">
                <div class="flex-box">
                    <div class="flex1" id="addcart">
                        <a class="flex1 footbtn1" href="#" title="">
                            加入购物车
                        </a>
                    </div>
                    <div class="flex1" id="btn-pay">
                        <a class="flex1 footbtn2" href="#" title="">
                            立即购买
                        </a>
                    </div>
                </div>
            </div>

            <!-- 补货中 -->
            <div class="border-t goodsreplenishment hide" style="width: 55%;">
                <div class="flex-box">
                    <div class="flex1">
                        <a class="flex1 footbtn1" href="#" title="">
                            到货通知
                        </a>
                    </div>
                    <div class="flex1">
                        <a class="flex1 footbtn2" href="#" title="">
                            补货中
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <section class="pop-slide-up">
        <section class="pop-slide-con">
            <div class="pop-slide-hd border-b">
                <div class="shopsmall"><img src="img/shopsmall.jpg" width="122" height="122" alt=""></div>
                <div class="shopcont">
                    <p class="mb4 fc-sun fs-16">&yen;1999.00</p>
                    <p class="mb4 fc-9 fs-12">库存：18</p>
                    <p class="mb4 fc-3 fs-12">已选：“<span>中国红</span>”</p>
                </div>
                <i class="icon-roundclose close"></i>
            </div>
            <section class="form-group flex-box border-b" style="min-height: 44px; height: auto;">
                <label class="form-label mb4">颜色</label>
                <div class="form-control-box" id="color">
                    <span class="btn btn-xs fl mb4 mr8 btn-warning">中国红</span>
                    <span class="btn btn-xs fl mb4 mr8 btn-gray">星空灰</span>
                    <span class="btn btn-xs fl mb4 mr8 btn-gray">神秘紫</span>
                </div>
            </section>
            <section class="form-group flex-box" style="margin-bottom: 50px;">
                <label class="form-label">数量</label>
                <div class="form-control-box goodsnumber">
                    <i class="icon-minus numberactive numberdisabled"></i>
                    <input class="divinput numberactive" type="number" name="" value="1">
                    <!-- <div contenteditable="true">1</div> -->
                    <i class="icon-add numberactive"></i>
                </div>
            </section>
            <!-- 有库存的展示按钮 -->
            <div class="pop-slide-btn flex-box border-t border-t-primary">
                <a href="#" class="flex1 show footbtn1" title="">加入购物车</a>
                <a href="#" class="flex1 show footbtn2" title="">立即购买</a>
            </div>
            <!-- 无库存的展示按钮 -->
            <div class="pop-slide-btn flex-box border-t goodsreplenishment hide">
                <a href="#" class="flex1 show footbtn2" title="">补货中</a>
            </div>
        </section>
    </section>
</body>
<script src="../../public/js/gat.AlertMessage.js"></script>
<script src="../../public/js/gat.PopSlideUp.js"></script>
<script src="../../public/js/base.js"></script>
<script type="text/javascript">
$(function(){
    //goods轮播
    var lilen = $('.goodsbanner li').length;
    if (lilen >= 2) {$('.goods-pagination').show()};
    var swiperp = new Swiper ('.goodsbanner', {
        pagination: '.goods-pagination',   //下面锚点
    });

    //已收藏
    $('#collection').click(function(){
        $(this).addClass('factive');
        $(this).find('span').html('已收藏');
        message.showNotify({
            'content':'已添加收藏',
            'delay': '1000'
        })
    })

    //关注
    $('.btn-infoheart').click(function(){
        if ($(this).find('i').hasClass('icon-likefill')) {
            return;
        }else{
            $(this).find('i').removeClass('icon-like').addClass('icon-likefill');
            var num = $(this).find('span');
            var val = parseFloat(num.text());
            val++;
            num.html(val);
        };
    });

    //弹出
    var chooseHtml = '<h3 class="mb8">提示</h3>'
                    +'<p class="mb4 fs-12">您还未选择商品配送范围</p>'
                    +'<p class="mb4 fs-12">请点击下方按钮设置</p>';
    $('#btn-address').click(function(){
        message.showMessage({
            'btnTxt':'去选择配送范围',
            'content':chooseHtml
        });
    });
    $('#addcart').click(function(){
        message.showNotify({
            'content':'添加成功',
            'delay': '1000'
        })
    });

    //购买弹出层
    $('#chosecolor').click(function(event) {
        popSildeUp.show(document.querySelectorAll('.pop-slide-up')[0]);
    });
    $('#btn-pay').click(function(event) {
        popSildeUp.show(document.querySelectorAll('.pop-slide-up')[0]);
    });

    //颜色
    $('#color span').click(function(){
        var text = $(this).text();
        $('.shopcont p').eq(2).find('span').html(text);
    });

    //数量加减
    var goodsnumber = $('.goodsnumber');
    var input = goodsnumber.find('input')
    var valnum = input.val();
    $('.icon-minus').click(function(){
        if (valnum>1) {
            valnum--
            input.val(valnum);
            //goodsnumber.find('div.divinput').html(valnum);
            if( valnum == 1){
                $('.icon-minus').addClass('numberdisabled');
            }
        };
    })
    $('.icon-add').click(function(){
        valnum++
        input.val(valnum);
        $('.icon-minus').removeClass('numberdisabled');
        //goodsnumber.find('div.divinput').html(valnum);
    });
})
</script>
</html>