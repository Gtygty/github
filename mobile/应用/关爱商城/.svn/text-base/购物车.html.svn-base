<script type="text/javascript" charset="utf-8">
    $(function(){
        $('.editor').click(function(){
            var detail = $(this).parents('.order-detail');
            if ( !this.bBtn) {
                $(this).html('完成');
                detail.find('.entity-pay').addClass('of-v');
                detail.find('.entity-desc span').hide();
                detail.find('.goodsnumber').show();
                detail.find('.entity-dell').removeClass('hide-i').animate({right:'0'}, 300);
            }else{
                $(this).html('编辑');
                detail.find('.entity-pay').removeClass('of-v');
                detail.find('.entity-desc span').show();
                detail.find('.goodsnumber').hide();
                detail.find('.entity-dell').animate({right:'-64px'}, 300, function(){
                    $(this).addClass('hide-i');
                });
            };
            this.bBtn = !this.bBtn;
        })
        //数量加减
        var goodsnumber = $('.goodsnumber');
        for (var i = 0; i < goodsnumber.length; i++) {
            goodsnumber[i].onclick = function(e){
                var input = $(this).find('input')
                var valnum = input.val();
                e = e || window.event;
                var el = e.srcElement;
                var cls = el.className;
                switch(cls){
                    case "icon-minus numberactive":
                        if (valnum>1) {
                            valnum--
                            input.val(valnum);
                            if (valnum == 1) {
                                $(this).find('.icon-minus').addClass('numberdisabled');
                            };
                        };
                        break;
                    case "icon-add numberactive":
                        valnum++
                        input.val(valnum);
                        $(this).find('.icon-minus').removeClass('numberdisabled');
                        break;
                    default:
                        break;
                }
            }
        };
    })
</script>
