.bg-f{ background: #fff;}
.bg-f7{ background: #f7f7f7;}

.fc-info{ color: #55c1e7;}

.ht8{ height: 8px;}

.mt12{ margin-top: 12px;}
.mt40{ margin-top: 40px;}
.mr5{margin-right: 5px;}
.mb8{ margin-bottom: 8px;}
.mb16{ margin-bottom: 16px;}
.mb40{margin-bottom: 40px;}
.pt16{ padding-top: 16px;}

.vm{ vertical-align: middle;}

.icon-sm{font-size: 14px;}

.col-1{width: 1em;}
.col-offect-1{margin-left: 1em;}

.triangle{width: 15px; height: 12px; background: url(../img/triangle.png) no-repeat; position: absolute; bottom: 0; right: 0; display: none;}

.card-list{ padding: 15px 6px; background: #fff;}
.card-list li{padding:0 6px;float: left;width: 50%;-webkit-tap-highlight-color: rgba(0,0,0,0);}
.oilcard{height: 44px;border: 1px solid #ddd;border-radius: 4px;overflow: hidden;position: relative;cursor: pointer;}
.oilcard .oilcard-img{float: left;width: 38.73%;height: 44px;text-align: center;padding-top:7px;}
.oilcard .oilcard-txt{display: block;margin-top:12px;margin-left: 38.73%;text-align: center;height: 20px;line-height: 20px;border-left: 2px #ddd solid;}
.checked .oilcard{ border-color: #FF6600 ;}
.checked .oilcard .triangle{display: block;}

.card-name{position: absolute;top: 0;right:0;display: block;color: #333;font-size: 14px;line-height:36px;}

.card-con{margin-left: 12px;margin-right: 12px;}

.amount-list{padding: 15px 6px 0; background: #fff;}
.amount-list li{padding:0 6px; float: left; width: 33.3333%; margin-bottom: 15px;-webkit-tap-highlight-color: rgba(0,0,0,0);}
.amount{line-height: 44px; height: 44px; border:1px solid #ccc; text-align: center; cursor: pointer; position: relative; border-radius: 4px;}
.active .amount{ color: #ff7f00; border-color: #ff7f00;}
.active .amount .triangle{display: block;}
.amount-list .disabled .amount{ line-height: 16px; color: #fff; background: #ededed; border-color: #ededed; padding-top: 5px;cursor: not-allowed;}

.tabulation{ position: fixed; right: 12px; bottom: 12px; width: 40px; height: 40px; border-radius: 50%; background: #fff;border: 2px #ff814a solid; text-align: center; line-height: 40px; font-size: 20px;}


.oil-img{ width: 48px; height: 48px; margin-right: 10px; overflow: hidden; background-size: 100% auto; background-image: url(../img/oilimg.png);}

.oil-label h2{ color: #333;}
.question .label-act-left{ width: 90%;}




